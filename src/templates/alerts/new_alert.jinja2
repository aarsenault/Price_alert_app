{% extends "base.jinja2" %}

{% block content %}
    <div class="page-header">
        <h1> Create Alert <small> to get price notifications for any online store</small> </h1>
    </div>
    <div class="form-size">

{#        action="/" to specify what route to send data to, but default is same page as route#}
        <form method="post">
            <div class="form-group">
                <label for="name"> Item Name </label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>

            <div class="form-group">
                <label for="url"> Item Adress </label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://www...">
            </div>

            <div class="form-group">
                <label for="price_limit"> Price Limit </label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="$" aria-describedby="priceLimitBlock">
                <p id="priceLimitBlock" class="help-block"> We'll send you an email when the price goes below this price limit </p>
            </div>

            <button type="submit" class="btn btn-default"> Create </button>

        </form>

    </div>

{% endblock %}