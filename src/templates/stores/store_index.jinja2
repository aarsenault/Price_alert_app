{% extends "base.jinja2" %}

{% block content %}
    <div class="page-header">
        <h1> Stores
            <small> list of supported stores</small>
        </h1>
    </div>
    <div class="list-group">

        {% for store in stores %}

            {#  display list of stores here as #}
            <a href="{{ url_for('stores.store_page', store_id=store._id) }}" class="List-group-item-item">
                <h4 class="List-group-item-title"> {{ store.name }} </h4>
                <p class="List=group-item-text"> All URLs in this store should start with <strong>{{ store.url_prefix }}</strong> </p>
            </a>

        {% endfor %}
    </div>

    {% if session['email'] in config.ADMINS %}

        <a class="btn btn-success" href="{{ url_for('stores.create_store') }}">
            <span class="glyphicon glyphicon-plus"></span> Create new
        </a>

    {% endif %}

{% endblock %}