{% extends "base.jinja2" %}

{% block content %}
    <div class="page-header">
        <h1> Create Store </h1>
    </div>

    <div class="form-size">
        {#        without specifying the action='' then this page will post to itself #}
        <form method="post">
            <div class="form-group">
                <label for="name"> Store Name </label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Store Name">

            </div>

            <div class="form-group">
                <label for="name"> url_prefix </label>
                <input type="text" class="form-control" id="url_prefix" name="url_prefix" placeholder="http://www..."
                       aria-describedby="storeURLPrefixHelp">
                <span id="storeURLPrefixHelp" class="help-block"> The main url of this online store </span>

            </div>

            <div class="form-group">
                <label for="name"> Tag Name </label>
                <input type="text" class="form-control" id="tag_name" name="tag_name" placeholder="span" value="span"
                       aria-describedby="storeTagNameHelp">
                <span id="storeTagNameHelp" class="help-block"> HTML tag of the item containing the price (usually <code>span</code> </span>
            </div>

            <div class="form-group">
                <label for="name"> Search Query </label>
                <input type="text" class="form-control" id="query" name="query" placeholder='{"id": "price-now"}' value='{"id": "price-now"}'
                       aria-describedby="storeQueryHelp">
                <span id="storeQueryHelp" class="help-block"> What JSON query you need to find the specific tag with the price </span>
            </div>


            <button type="submit" class="btn btn-default"> Create</button>
        </form>


    </div>
{% endblock %}